@model FunWithGit.ViewModels.RetrieveViewModel
@{
    ViewBag.Title = "Retrieve quote in Git";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Git</h2>
        <form method="post">
            @if (ViewBag.Message != null)
            {
                <div>@ViewBag.Message</div>
            }
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            
            <div class="form-group">
                <label asp-for="QuoteNumber">Quote Number</label>
                <input asp-for="QuoteNumber" class="form-control" />
                <span asp-validation-for="QuoteNumber" class="text-muted"></span>
            </div>

            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Retrieve this Quote" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>